{
	"tasks": {
		"dev": "deno run -A --node-modules-dir npm:vite@5.4.8",
		"build": "deno run -A --node-modules-dir npm:vite@5.4.8 build"
	},
	"imports": {
		"vite": "npm:vite@5.4.8",
		"vite-plugin-solid": "npm:vite-plugin-solid@2.10.2",
		"solid-js": "npm:solid-js@1.9.2",
		"tailwindcss": "npm:tailwindcss@next",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@next"
	},
	"compilerOptions": {
		"lib": ["dom", "esnext"],
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"jsxImportSource": "solid-js"
	},
	"nodeModulesDir": "auto"
}
